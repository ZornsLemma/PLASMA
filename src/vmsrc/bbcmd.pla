        if perr
            prstr(@errorstr)
	    prbyte(perr)
	    perr = 0
        else
            prstr(@okstr)
        fin
	crout()
    fin
    prstr(@freestr)
    prword(availheap)
#ifdef PLAS128
    prstr(@xfreestr)
    prword(xheapsize - 1 - xheap) // a bit approximate
#endif
    crout
    prstr(@prompt)
    cmdptr = rdstr(':')
loop
done
