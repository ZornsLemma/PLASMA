    // PLAS128-based JIT is the ultimate destination.
    // SFTODO THIS WORKS FOR TUBE memcpy(dst, defptr=>bytecodeaddr, defptr->bytecodesize)
    memxcpySFTODONOTSUREWHATTOCALLTHIS(dst, defptr=>bytecodeaddr, defptr->bytecodesize)
    // SFTODO *$003C   = defptr=>bytecodeaddr
